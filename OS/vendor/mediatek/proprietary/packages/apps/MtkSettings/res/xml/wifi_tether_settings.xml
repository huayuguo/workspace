<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.android.settings.widget.ValidatedEditTextPreference
        android:key="wifi_tether_network_name"
        android:title="@string/wifi_hotspot_name_title"
        android:summary="@string/summary_placeholder" />

    <com.android.settings.widget.ValidatedEditTextPreference
        android:key="wifi_tether_network_password"
        android:title="@string/wifi_hotspot_password_title" />

    <ListPreference
        android:key="wifi_tether_network_ap_band"
        android:title="@string/wifi_hotspot_ap_band_title"
        android:summary="@string/summary_placeholder" />

    <!-- M: Hotspot manager settings start-->
    <ListPreference
        android:key="wifi_tether_network_security"
        android:title="@string/wifi_security"
        android:summary="@string/summary_placeholder"
        android:entries="@array/wifi_ap_security"
        android:entryValues="@array/wifi_hotspot_security_values" />

    <Preference
            android:key="wifi_tether_network_wps"
            android:title="@string/wifi_tether_wps_connect_title"
            android:summary="@string/wifi_tether_wps_connect_summary" />

    <Preference
            android:key="wifi_tether_network_reset"
            android:title="@string/wifi_ap_reset_OOB"
            android:summary="@string/summary_placeholder" />

    <ListPreference
        android:key="wifi_tether_network_disable_policy"
        android:title="@string/wifi_tether_auto_disable_title"
        android:summary="@string/summary_placeholder"
        android:entries="@array/wifi_hotspot_disable_policy_entries"
        android:entryValues="@array/wifi_hotspot_disable_policy_values" />


    <ListPreference
        android:key="wifi_tether_network_connections"
        android:title="@string/wifi_ap_max_connection_title"
        android:summary="@string/summary_placeholder"
        android:entries="@array/wifi_ap_max_connection_entries"
        android:entryValues="@array/wifi_ap_max_connection_entries_value" />

    <Preference
            android:key="wifi_tether_connected_user"
            android:title="@string/wifi_ap_connected_title"
            android:summary="@string/summary_placeholder"
            android:fragment="com.mediatek.settings.wifi.tether.WifiTetherUserListSettings">
        <extra
            android:name="usermode"
            android:value="0" />
    </Preference>

    <Preference
            android:key="wifi_tether_blocked_user"
            android:title="@string/wifi_ap_blocked_title"
            android:summary="@string/summary_placeholder"
            android:fragment="com.mediatek.settings.wifi.tether.WifiTetherUserListSettings">
        <extra
            android:name="usermode"
            android:value="1" />
    </Preference>
    <!-- M: Hotspot manager settings end-->

</PreferenceScreen>