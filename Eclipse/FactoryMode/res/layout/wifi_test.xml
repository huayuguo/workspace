<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/info_layout">
	<include layout="@layout/yjzn_header"/>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:fadeScrollbars="false" 
		android:layout_weight="2">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical" >

			<TextView
				android:id="@id/wifi_state_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				style="@style/info_label"/>

			<TextView
				android:id="@id/wifi_result_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				style="@style/info_label"/>

			<TextView
				android:id="@id/wifi_con_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				style="@style/info_label" />

			<TextView
				android:id="@id/wifi_strength"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/WiFi_strength"
				
				style="@style/info_label" />

			<TextView
				android:id="@id/wifi_resinfo_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				style="@style/info_label"/>
		</LinearLayout>
	</ScrollView>

	<include layout="@layout/yjzn_btns"/>

</LinearLayout>