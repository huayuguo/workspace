<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="fill_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:id="@id/touchscreen_bt_ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Success" android:layout_centerInParent="true" />
        <Button android:id="@id/touchscreen_bt_failed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Failed" android:layout_toRightOf="@id/touchscreen_bt_ok" />
    </RelativeLayout>
</LinearLayout>
